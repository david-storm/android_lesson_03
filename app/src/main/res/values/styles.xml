<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabText</item>
    </style>

    <style name="AppTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textScaleX">1.1</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="tealTheme">
        <item name="colorPrimary">@color/teal_700</item>
    </style>

    <style name="button_submit">
        <item name="android:theme">@style/tealTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:textSize">48sp</item>
    </style>

</resources>